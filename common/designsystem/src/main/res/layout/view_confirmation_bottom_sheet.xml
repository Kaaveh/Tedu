<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <include layout="@layout/view_bottom_sheet_header" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/confirmationOkay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/selector_button_pill"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingTop="8dp"
        android:paddingEnd="24dp"
        android:paddingBottom="8dp"
        android:text="@string/general_okay_text"
        android:textColor="@color/text_primary_revert_color"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheetTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/confirmationCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/selector_button_outline_pill"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingTop="8dp"
        android:paddingEnd="24dp"
        android:paddingBottom="8dp"
        android:text="@string/general_cancel_text"
        android:textColor="@color/text_primary_color"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintEnd_toStartOf="@id/confirmationOkay"
        app:layout_constraintTop_toBottomOf="@id/sheetTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>